TC : O(N)
SC : O(1)

public class Main
{
	public static void main(String[] args) {
	    int[] arr = {-1,-2,-3,4,-9};
	    int c = 0;
	    int ans = Integer.MIN_VALUE;

		  for(int i = 0;i<arr.length;i++){
		      
          	      int sum = arr[i]+c;
		      if (sum<0){
		          c = 0;
		      }
		      else{
		          c = sum;
		      }
		      
                   ans = Math.max(ans,sum);
		  }
		  System.out.print(ans);
	}
}

